{
    "name":"WorkdayPlus",
    "description":"Fixes workday calendar and shows UBCgrades and RMP data",
    "version":"0.0.0",
    "manifest_version":3,
    
    "action":{
        "default_popup":"main.html",
        "default_icon":"favicon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://okanagan.calendar.ubc.ca/*"
    ],
    "content_scripts": [
    {
      "js": [
        "extract-courses.js","score.js","calendar.js","registrationGuide.js","comm.js"
      ],
      "matches": [
        "https://wd10.myworkday.com/ubc/d/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["view/ui.js", "view/design.css", "view/googleCalendar.js"],
      "matches": ["https://wd10.myworkday.com/*"]
    }
  ]
}
